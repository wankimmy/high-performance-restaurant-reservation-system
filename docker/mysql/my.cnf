[mysqld]
# General
default_authentication_plugin = mysql_native_password
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance
# Increased for stress testing: 2 workers + 1 task worker + 2 queue workers + high concurrency
# Each worker can handle multiple concurrent requests, so we need headroom
max_connections = 500
key_buffer_size = 256M
max_allowed_packet = 64M
thread_stack = 256K
# Increased thread cache for better connection reuse under load
thread_cache_size = 50
query_cache_limit = 2M
query_cache_size = 32M
# Connection timeout settings for stress testing
wait_timeout = 300
interactive_timeout = 300

# InnoDB
# Increased buffer pool for 4GB RAM setup (1.5G leaves room for PHP + Redis)
innodb_buffer_pool_size = 1536M
innodb_log_file_size = 256M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Binary logging - DISABLED for performance (re-enable for replication/backups in production)
# log_bin = /var/log/mysql/mysql-bin.log
# expire_logs_days = 7
# max_binlog_size = 100M

